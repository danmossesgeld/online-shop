{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "cors": [
      {
        "origin": [
          "http://localhost:5173"
        ],
        "method": [
          "GET",
          "POST",
          "PUT"
        ],
        "maxAgeSeconds": 3600
      }
    ]
  }
}
